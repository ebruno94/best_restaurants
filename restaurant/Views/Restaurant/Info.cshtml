@{
  Layout = "_Layout";
}

<div class="container" id="infoContainer">
  <div class="row">
    <div class="col-md-12">
      <h1>@Model.GetName()</h1>
      <hr>
      <h2>City: @Model.GetCity()</h2>
      <h2>Rating: @Model.GetRating() Michelin Stars</h2>
      <br>
      <h3>Cuisines</h3>
      <ul>
        @foreach (var cuisine in Model.GetCuisines())
        {
          <li><h4>@cuisine.GetName()</h4></li>
        }
      </ul>
    </div>
  </div>
</div>

<a href="/"><button type="button" class="btn">View all Restaurants!</button></a>

<div class="container" id="reviewFormContainer">
  <div class="row">
    <div class="col-md-12">
      <h1>ADD A REVIEW FOR THIS RESTAURANT</h1>
      <hr>
      <form action="/Review/Create" method="post">
        <div class="flex">
          <div class="form-group inline-block">
            <label for="reviewName">Name: </label>
            <input type="text" name="reviewName" id="reviewName">
          </div>
          <div class="form-group inline-block">
            <label for="reviewDate">Date: </label>
            <input type="text" name="reviewDate">
          </div>
          <div class="form-group inline-block">
            <label for="reviewRate">Rating:</label>
            <select name="reviewRate" id="reviewRate">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="reviewDesc">Description: </label>
          <textarea type="text" name="reviewDesc" class="form-control"></textarea>
        </div>
        <input type="hidden" name="restaurantId" value="@Model.GetId()">
        <button type="submit" class="btn">Submit</button>
      </form>

    </div>
  </div>
</div>


@foreach (var review in Model.GetReviews())
{
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>@review.GetReviewer()</h1>
        <h2>Created @review.GetDate()</h2>
        <h2>Rating: @review.GetRating()</h2>
        <hr>
        <h2>@review.GetDescription()</h2>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <a href="/Review/Delete/@review.GetId()"><button type="button" class="btn"> Delete This Review </button></a>
      </div>
    </div>
  </div>
  <br>
}
